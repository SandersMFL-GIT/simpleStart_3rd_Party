    <decisions>
        <name>Simple_Start_Retainer</name>
        <label>Simple Start Retainer</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record__Prior.Credit_Check_Complete__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Credit_Decision__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>Failed</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assign_Retainer_Fields</targetReference>
            </connector>
            <label>yes</label>
        </rules>
        <rules>
            <name>Freeze</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Credit_Check_Complete__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Credit_Decision__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Failed</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Freeze_SS</targetReference>
            </connector>
            <label>Freeze</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <formulas>
        <name>BaseRetainer</name>
        <dataType>Number</dataType>
        <expression>IF(
  ISBLANK({!Get_Attorney_Billable_Hr.Hourly_Billing_Rate__c}),
  0,
  ({!Get_Attorney_Billable_Hr.Hourly_Billing_Rate__c}) * 10
)</expression>
        <scale>0</scale>
    </formulas>
    <formulas>
        <name>CreditFactor</name>
        <dataType>Number</dataType>
        <expression>CASE(
    $Record.Credit_Decision__c,
    &quot;Gold - 0% Retainer&quot;,   0,
    &quot;Silver - 50% Retainer&quot;, 0.5,
    &quot;Bronze - 80% Retainer&quot;, 0.8,
    &quot;Full Retainer&quot;,         1,
    &quot;Failed&quot;,                NULL,   
        1                      
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>FinalQuotedRetainer</name>
        <dataType>Number</dataType>
        <expression>{!BaseRetainer}*{!CreditFactor}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>SimpleStartDiscountAmount</name>
        <dataType>Number</dataType>
        <expression>{!FinalQuotedRetainer}</expression>
        <scale>0</scale>
    </formulas>
