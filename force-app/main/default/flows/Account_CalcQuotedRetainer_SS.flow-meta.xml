        </rules>
        <rules>
            <name>Simple_Start</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Credit_Check_Complete__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Responsible_Attorney__c</leftValueReference>
